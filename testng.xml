<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="DemoQA Intermediate Suite" parallel="false">

    <listeners>
        <listener class-name="com.demoqa.listeners.TestListener"/>
    </listeners>

    <parameter name="browser" value="chrome"/>

    <!-- ðŸ”¹ Window, Frames & Alerts -->
    <test name="BrowserWindowsAndFramesAndAlerts">
        <classes>
            <class name="com.demoqa.tests.BrowserWindowsTests"/>
            <class name="com.demoqa.tests.FramesTests"/>
            <class name="com.demoqa.tests.AlertsTests"/>
        </classes>
    </test>

    <!-- ðŸ”¹ Assertions -->
    <test name="Assertions Tests">
        <classes>
            <class name="com.demoqa.tests.AssertionsTests"/>
        </classes>
    </test>

    <!-- ðŸ”¹ Waits & JS Executor -->
    <test name="Waits and JS Executor Tests">
        <classes>
            <class name="com.demoqa.tests.WaitsTests"/>
        </classes>
    </test>

    <test name="DataProvider Module">
        <classes>
            <class name="com.demoqa.tests.DataProviderTests"/>
        </classes>
    </test>

    <test name="Excel DataProvider Tests">
        <classes>
            <class name="com.demoqa.tests.ExcelDataProviderTests"/>
        </classes>
    </test>

    <test name="Json DataProvider Tests">
        <classes>
            <class name="com.demoqa.tests.JsonDataProviderTests"/>
        </classes>
    </test>

</suite>
